<VBox prefWidth="600.0" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="EmpresaCRUD.AppController">
   <children>
      <MenuBar>
        <menus>
          <Menu mnemonicParsing="false" text="Archivo">
            <items>
              <MenuItem fx:id="abrirArchivo" mnemonicParsing="false" onAction="#abrirArchivo" text="Abrir archivo" />
            </items>
          </Menu>
        </menus>
      </MenuBar>
      <AnchorPane prefHeight="400.0" prefWidth="600.0">
         <children>
            <Label layoutX="26.0" layoutY="20.0" text="DAM EMPRESAS">
               <font>
                  <Font name="System Bold" size="24.0" />
               </font>
            </Label>
            <Label layoutX="26.0" layoutY="73.0" text="ID" />
            <Label layoutX="26.0" layoutY="102.0" text="Nombre" />
            <Label layoutX="36.0" layoutY="136.0" text="Web" />
            <Button fx:id="btnAdd" layoutX="29.0" layoutY="188.0" mnemonicParsing="false" onAction="#nuevaEmpresa" text="Nueva" />
            <Button fx:id="btnUpdate" layoutX="28.0" layoutY="218.0" mnemonicParsing="false" onAction="#modificarEmpresa" text="Modificar" />
            <Button fx:id="btnDelete" layoutX="28.0" layoutY="249.0" mnemonicParsing="false" onAction="#eliminarEmpresa" text="Eliminar" />
            <TextField fx:id="idTxt" layoutX="93.0" layoutY="69.0" />
            <TextField fx:id="nombreTxt" layoutX="93.0" layoutY="98.0" />
            <TextField fx:id="webTxt" layoutX="93.0" layoutY="132.0" />
            <ListView fx:id="lista" layoutX="268.0" layoutY="69.0" prefHeight="317.0" prefWidth="317.0" />
         </children>
      </AnchorPane>
   </children>
</VBox>
